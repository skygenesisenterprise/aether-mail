# Aether Mail - Environment Configuration for Docker
# Copy this file to .env and customize for your environment

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/aethermail_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Backend Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
API_ACCESS_TOKEN=your-api-access-token-here-change-in-production
USE_TEST_DATA=false

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3000

# Custom Mail Server Configuration (Optional)
# Example for custom domain:
# EXAMPLE_COM_IMAP_HOST=mail.example.com
# EXAMPLE_COM_IMAP_PORT=993
# EXAMPLE_COM_IMAP_TLS=true
# EXAMPLE_COM_SMTP_HOST=smtp.example.com
# EXAMPLE_COM_SMTP_PORT=587
# EXAMPLE_COM_SMTP_SECURE=true

# Production Configuration
NODE_ENV=production