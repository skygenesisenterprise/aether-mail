{
  "displayName": "Aether Mail",
  "license": "Apache-2.0",
  "description": "Aether Mail is a modern, open-source email client built with React, Vite, and Tailwind CSS. It offers a sleek and intuitive interface for managing your emails efficiently.",
  "author": "Sky Genesis Enterprise",
  "email": "contact@skygenesisenterprise.com",
  "name": "react-vite-tailwind",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/dist/main.js",
  "homepage": "./",
  "scripts": {
    "pr": "node scripts/pr.mjs",
    "dev": "pnpm env:setup && concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:frontend": "vite --host 0.0.0.0 --port 4000",
    "dev:backend": "node --trace-warnings --loader ts-node/esm --experimental-specifier-resolution=node ./api/server.ts",
    "prod": "NODE_ENV=production pnpm env:setup && pnpm build && pnpm prod:start",
    "prod:start": "node --trace-warnings dist/backend/server.js",
    "env:setup": "node scripts/setup-env.cjs",
    "env:check": "node scripts/check-env.cjs",
    "test": "jest --watchAll --passWithNoTests",
    "test:frontend": "jest --watchAll --passWithNoTests",
    "test:backend": "jest --watchAll --passWithNoTests",
    "test:unit": "jest --watchAll --passWithNoTests",
    "test:integration": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:coverage:frontend": "jest --coverage --passWithNoTests",
    "test:coverage:backend": "jest --coverage --passWithNoTests",
    "test:coverage:unit": "jest --coverage --passWithNoTests",
    "build": "pnpm build:frontend && pnpm build:backend",
    "build:frontend": "vite build --outDir dist/frontend",
    "build:backend": "tsc -p tsconfig.server.json --outDir dist/backend",
    "build:merge": "cp package.json dist && cp .env dist",
    "build:pgp": "node scripts/pgp-key.cjs",
    "lint": "pnpm exec biome lint --write && pnpm exec tsc --noEmit",
    "format": "pnpm exec biome format --write",
    "format:check": "pnpm exec biome format --check",
    "preview": "vite preview",
    "start:backend": "node --trace-warnings --loader ts-node/esm --experimental-specifier-resolution=node ./api/server.ts",
    "start:frontend": "vite preview",
    "start": "pnpm start:backend & pnpm start:frontend",
    "electron": "pnpm build:electron:main && NODE_ENV=development electron electron/dist/main.js",
    "electron:dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\" \"wait-on http://localhost:5173 && pnpm electron\"",
    "build:electron:main": "tsc electron/main.ts --outDir electron/dist --module commonjs --target es2018 --esModuleInterop",
    "build:electron": "pnpm build:frontend && pnpm build:electron:main && electron-builder --config electron-builder.json",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml build",
    "docker:dev:rebuild": "docker-compose -f docker-compose.dev.yml build --no-cache",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:prod:rebuild": "docker-compose -f docker-compose.prod.yml build --no-cache",
    "docker:build": "docker build -t aether-mail .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t aether-mail:dev .",
    "docker:run": "docker run -p 4000:4000 aether-mail",
    "docker:run:dev": "docker run -p 5173:5173 -p 4000:4000 aether-mail:dev",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:stop": "docker-compose stop",
    "docker:clean": "docker system prune -f --volumes",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:prod": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:exec": "docker exec -it aethermail-prod sh",
    "docker:exec:dev": "docker exec -it aethermail-app-dev sh",
    "pgp-keygen": "node scripts/pgp-key.cjs",
    "py:venv": "source .venv/bin/activate",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky install",
    "build:storybook": "storybook build",
    "build:tor": "bash scripts/build-tor.sh",
    "build:web-server": "bash scripts/web-deploy.sh"
  },
