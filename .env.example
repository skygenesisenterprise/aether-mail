# -------------------------------
# Aether Mail - Environment Example
# Version: 1.0.0
# Date: 2025-08-26
# -------------------------------

# -------------------------------
# Application Settings
# -------------------------------
APP_NAME=Aether Mail
APP_ENV=development          # development | production | test
APP_DEBUG=true               # true | false
APP_PORT=3000                # Port where the client or local dev server runs
APP_URL=http://localhost:3000

# -------------------------------
# API / Backend
# -------------------------------
API_BASE_URL=https://api.skygenesisenterprise.com
API_KEY=your_api_key_here

# -------------------------------
# Email Settings
# -------------------------------
EMAIL_PROVIDER=smtp           # smtp | imap | exchange | custom
EMAIL_HOST=smtp.mailserver.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_secure_password
EMAIL_SECURE=false           # true for SSL/TLS, false for STARTTLS

# -------------------------------
# Security & Encryption
# -------------------------------
ENCRYPTION_METHOD=RSA-AES     # RSA-AES | AES-256 | custom
PRIVATE_KEY_PATH=./keys/private.pem
PUBLIC_KEY_PATH=./keys/public.pem
ENABLE_2FA=true

# -------------------------------
# Logging
# -------------------------------
LOG_LEVEL=info                # debug | info | warn | error
LOG_FILE_PATH=./logs/aethermail.log

# -------------------------------
# Optional Features
# -------------------------------
ENABLE_OFFLINE_MODE=false
ENABLE_SMART_INBOX=true
ENABLE_NOTIFICATIONS=true

# -------------------------------
# Third-Party Integrations
# -------------------------------
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id_here
