#########################################
# Aether Mail Environment Configuration #
#########################################

# Frontend Configuration
# API Base URL for frontend calls
# In development: http://localhost:3000
# In production: https://api.skygenesisenterprise.com
VITE_API_BASE_URL=http://localhost:3000

# Backend Configuration
# Database connection URL
DATABASE_URL=postgresql://username:password@localhost:5432/aethermail

# JWT Secret for token signing
JWT_SECRET=your-super-secret-jwt-key-here

# API Access Token for external API calls
API_ACCESS_TOKEN=your-api-access-token-here

# External API Base URL for API calls
EXTERNAL_API_BASE_URL=https://api.example.com

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=3000

# Development Configuration
# Set to true to use test email data instead of real IMAP connections
# Set to false in production to use real email providers
USE_TEST_DATA=true
