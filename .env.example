#########################################
# Aether Mail Environment Configuration #
#########################################

# Frontend Configuration
# API Base URL for frontend calls
# In development: http://localhost:3000
# In production: https://api.skygenesisenterprise.com
VITE_API_BASE_URL=http://localhost:3000

# Backend Configuration
# Database connection URL
DATABASE_URL=postgresql://username:password@localhost:5432/aethermail

# JWT Secret for token signing
JWT_SECRET=your-super-secret-jwt-key-here

# API Access Token for external API calls
API_ACCESS_TOKEN=your-api-access-token-here

# External API Base URL for API calls
EXTERNAL_API_BASE_URL=https://api.example.com

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=3000

# Development Configuration
# Set to true to use test email data instead of real IMAP connections
# Set to false in production to use real email providers
USE_TEST_DATA=true

# Custom Mail Server Configuration
# Configure custom IMAP/SMTP servers for specific domains
# Format: DOMAIN_IMAP_HOST=mail.example.com
#         DOMAIN_IMAP_PORT=993
#         DOMAIN_IMAP_TLS=true
#         DOMAIN_SMTP_HOST=smtp.example.com
#         DOMAIN_SMTP_PORT=587
#         DOMAIN_SMTP_SECURE=true

# Example for custom domain:
# EXAMPLE_COM_IMAP_HOST=mail.example.com
# EXAMPLE_COM_IMAP_PORT=993
# EXAMPLE_COM_IMAP_TLS=true
# EXAMPLE_COM_SMTP_HOST=smtp.example.com
# EXAMPLE_COM_SMTP_PORT=587
# EXAMPLE_COM_SMTP_SECURE=true

# Default custom mail server (fallback for unknown domains)
# DEFAULT_IMAP_HOST=mail.example.com
# DEFAULT_IMAP_PORT=993
# DEFAULT_IMAP_TLS=true
# DEFAULT_SMTP_HOST=smtp.example.com
# DEFAULT_SMTP_PORT=587
# DEFAULT_SMTP_SECURE=true
